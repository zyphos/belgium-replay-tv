<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.belgium"
       name="Belgium Replay TV"
       version="0.0.32"
       provider-name="zyphos.be">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.elementtree" version="1.2.7"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="addon.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Videos from Belgium TV RTBF (, RTL-TVI, CLUB RTL, PLUG RTL, Tv Com)</summary>
    <description>Find all replay TV video</description>
    <platform>all</platform>
    <license>GPL</license>
    <source>https://github.com/zyphos/belgium-replay-tv</source>
  </extension>
</addon>
